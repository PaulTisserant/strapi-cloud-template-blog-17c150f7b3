{
  "kind": "collectionType",
  "collectionName": "etablissements",
  "info": {
    "singularName": "etablissement",
    "pluralName": "etablissements",
    "displayName": "Etablissement"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "nom_etablissement": {
      "type": "string",
      "required": true
    },
    "type_etablissement": {
      "type": "enumeration",
      "enum": [
        "individuel",
        "hebergement",
        "privilege",
        "departemental",
        "national"
      ]
    },
    "theme_etablissement": {
      "type": "enumeration",
      "enum": [
        "restaurant",
        "loisir",
        "bienetre",
        "hotel",
        "commerce"
      ]
    },
    "categorie_restaurant": {
      "type": "enumeration",
      "conditions": {
        "visible": {
          "==": [
            {
              "var": "theme_etablissement"
            },
            "restaurant"
          ]
        }
      },
      "default": "autre",
      "enum": [
        "cuisine_creative",
        "cuisine_du_monde",
        "cuisine_traditionnelle",
        "gastronomie",
        "brasserie",
        "restauration_rapide",
        "creperie",
        "cuisine_bio",
        "cafeteria"
      ]
    },
    "location": {
      "type": "component",
      "component": "shared.location",
      "repeatable": false
    },
    "contact": {
      "type": "component",
      "component": "shared.contact",
      "repeatable": false
    },
    "offre": {
      "type": "component",
      "component": "shared.offre",
      "repeatable": false
    },
    "ouverture": {
      "type": "component",
      "component": "shared.ouverture",
      "repeatable": false
    },
    "presentation": {
      "type": "text"
    },
    "infos_supplementaires": {
      "type": "text"
    },
    "images": {
      "type": "media",
      "multiple": true,
      "required": true,
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ]
    }
  }
}
